<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:g8='urn:import:jhi.germinate.client.widget.element'
			 xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:import field="jhi.germinate.shared.Style.*"/>
	<ui:import field="org.gwtbootstrap3.client.ui.constants.Styles.*"/>
	<ui:import field="com.google.gwt.user.client.ui.FormPanel.*"/>
	<ui:with field="msg" type="jhi.germinate.client.i18n.Text"/>

	<ui:style>
		.thumbnail {
			padding: 0;
			/*border: 0;*/
			border-top-right-radius: 2px;
			border-top-left-radius: 2px;
		}

		.thumbnail .img {
			max-width: 100%;
			height: 250px;
			border: 0;
			background-size: cover;
			background-repeat: no-repeat;
			background-position: 50% 50%;
			border-top-right-radius: 2px;
			border-top-left-radius: 2px;
		}

		.overflow {
			overflow-x: hidden;
		}

		.button {
			width: 100%;
			border-top-left-radius: 0;
			border-top-right-radius: 0;
			border: 0;
			text-transform: capitalize;
			max-lines: 1;
			white-space: nowrap;
			text-overflow: ellipsis;
		}
	</ui:style>

	<b:Column size="XS_12" ui:field="panel">
		<b:ThumbnailPanel addStyleNames="{style.thumbnail}">
			<g8:AnchorWithContent ui:field="anchor">
				<g:SimplePanel ui:field="image" addStyleNames="{style.img}"/>
			</g8:AnchorWithContent>
			<b:Caption>
				<b:Heading size="H3" addStyleNames="{style.overflow}" ui:field="heading"/>
				<g8:ParagraphPanel addStyleNames="{style.overflow}" ui:field="paragraph"/>
			</b:Caption>
			<b:Button addStyleNames="{style.button}" ui:field="button" visible="false"/>
		</b:ThumbnailPanel>
	</b:Column>
</ui:UiBinder>