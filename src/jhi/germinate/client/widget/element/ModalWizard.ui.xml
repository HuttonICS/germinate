<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
			 xmlns:bg='urn:import:org.gwtbootstrap3.client.ui.gwt'>

	<ui:with field="msg" type="jhi.germinate.client.i18n.Text"/>

	<ui:style>
		.height {
			max-height: 70vh;
			overflow-y: auto;
		}
	</ui:style>

	<b:Modal removeOnHide="true" closable="true" fade="true" dataBackdrop="STATIC" dataKeyboard="true" ui:field="modal">
		<b:ModalBody>
			<b:Progress>
				<b:ProgressBar type="INFO" percent="0" ui:field="progressBar"/>
			</b:Progress>

			<b:Alert type="DANGER" ui:field="errorMessage" visible="false"/>

			<bg:FlowPanel addStyleNames="{style.height}" ui:field="content"/>
		</b:ModalBody>

		<b:ModalFooter>
			<b:Button type="DEFAULT" icon="ARROW_CIRCLE_LEFT" text="{msg.generalBack}" ui:field="backButton" enabled="false"/>
			<b:Button type="PRIMARY" icon="ARROW_CIRCLE_RIGHT" text="{msg.generalNext}" ui:field="nextButton"/>
		</b:ModalFooter>
	</b:Modal>
</ui:UiBinder>