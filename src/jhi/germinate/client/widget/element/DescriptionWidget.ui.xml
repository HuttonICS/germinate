<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:b='urn:import:org.gwtbootstrap3.client.ui'>

	<ui:style>
		.wrap {
			text-overflow: initial !important;
			white-space: normal !important;
		}

		.breakWord {
			word-wrap: break-word;
		}
	</ui:style>

	<b:Description ui:field="description">
		<b:DescriptionTitle addStyleNames="{style.wrap}" ui:field="title"/>
		<b:DescriptionData addStyleNames="{style.breakWord}" ui:field="data"/>
	</b:Description>
</ui:UiBinder>