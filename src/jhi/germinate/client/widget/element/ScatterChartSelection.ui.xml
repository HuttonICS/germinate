<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
			 xmlns:g8="urn:import:jhi.germinate.client.widget.listbox"
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:with field="msg" type="jhi.germinate.client.i18n.Text"/>

	<g:HTMLPanel>
		<b:Row>
			<b:Column size="XS_12,MD_6">
				<b:FormGroup>
					<b:FormLabel for="formFirst" ui:field="firstObjectLabel"/>
					<g8:GerminateValueListBox b:id="formFirst" ui:field="firstObject"/>
				</b:FormGroup>
				<b:FormGroup>
					<b:FormLabel for="formSecond" ui:field="secondObjectLabel"/>
					<g8:GerminateValueListBox b:id="formSecond" ui:field="secondObject"/>
				</b:FormGroup>
			</b:Column>
			<b:Column size="XS_12,MD_6">
				<b:FormGroup>
					<b:FormLabel for="formGroup" text="{msg.compoundGroup}"/>
					<g8:GroupListBox multipleSelect="false" b:id="formGroup" ui:field="group"/>
				</b:FormGroup>
				<b:FormGroup>
					<b:FormLabel for="formColor" text="{msg.compoundColor}"/>
					<g8:StringListBox b:id="formColor" ui:field="color"/>
				</b:FormGroup>
			</b:Column>
		</b:Row>
	</g:HTMLPanel>
</ui:UiBinder>