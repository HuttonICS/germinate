	<ui:import field="org.gwtbootstrap3.client.ui.constants.Styles.*"/>
	<ui:import field="org.gwtbootstrap3.client.ui.constants.ColumnSize.*"/>
	<ui:import field="jhi.germinate.shared.Style.*"/>

	<ui:style>

	</ui:style>
	<g:HTMLPanel>
		<a href="#" ui:field="anchor">
			<div class="{PANEL}" ui:field="panel">
				<div class="{PANEL_HEADING}" ui:field="heading">
					<div class="{TEXT_CENTER_ALIGN}">
						<i class="{MDI} {FA_FIXED_WIDTH} {FA_4X}" ui:field="icon"/>
					</div>
				</div>
				<div class="{PANEL_FOOTER}">
					<span class="{PULL_LEFT}" ui:field="detailsLabel"/>
					<span class="{PULL_RIGHT}">
						<i class="{MDI} {MDI_ARROW_RIGHT_BOLD_CIRCLE} {FA_LG}"/>
					</span>
					<div class="{CLEARFIX}"/>
				</div>
			</div>
		</a>
	</g:HTMLPanel>

</ui:UiBinder> 