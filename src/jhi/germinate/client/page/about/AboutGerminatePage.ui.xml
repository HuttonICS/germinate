<ui:UiBinder xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'
			 xmlns:g8='urn:import:jhi.germinate.client.widget.element'
			 xmlns:ui='urn:ui:com.google.gwt.uibinder'>

	<ui:with field="msg" type="jhi.germinate.client.i18n.Text"/>
	<ui:import field="jhi.germinate.shared.Style.*"/>

	<ui:style>
		.column {
			display: inline-block;
			vertical-align: middle;
			float: none;
			text-align: center;
		}

		.column img {
			width: 100%;
			max-width: 400px;
		}
	</ui:style>

	<g:FlowPanel ui:field="panel">
		<g:SimplePanel ui:field="banner"/>

		<b:PageHeader text="{msg.aboutTitle}"/>

		<b:Row>
			<b:Column addStyleNames="{COL_XXS_12}" size="XS_6, SM_6, LG_3">
				<g8:CategoryPanel anchor="{msg.aboutButtonsHomepageUrl}" icon="{MDI_WEB}" text="{msg.aboutButtonsHomepageTitle}" ui:field="homepage"/>
			</b:Column>
			<b:Column addStyleNames="{COL_XXS_12}" size="XS_6, SM_6, LG_3">
				<g8:CategoryPanel anchor="{msg.aboutButtonsGithubUrl}" icon="{MDI_GITHUB_CIRCLE}" text="{msg.aboutButtonsGithubTitle}"
								  ui:field="github"/>
			</b:Column>
			<b:Column addStyleNames="{COL_XXS_12}" size="XS_6, SM_6, LG_3">
				<g8:CategoryPanel anchor="{msg.aboutButtonsPublicationUrl}" icon="{MDI_FILE_DOCUMENT}" text="{msg.aboutButtonsPublicationTitle}"
								  ui:field="publication"/>
			</b:Column>
			<b:Column addStyleNames="{COL_XXS_12}" size="XS_6, SM_6, LG_3">
				<g8:CategoryPanel anchor="{msg.aboutButtonsDocumentationUrl}" icon="{MDI_GLASSES}" text="{msg.aboutButtonsDocumentationTitle}"
								  ui:field="documentation"/>
			</b:Column>
		</b:Row>

		<g:HTML ui:field="content"/>

		<g:SimplePanel ui:field="map"/>

		<b:Row>
			<b:Column addStyleNames="{COL_XXS_12} {style.column}" size="XS_6, SM_4">
				<g:Image ui:field="germinate"/>
			</b:Column>
			<b:Column addStyleNames="{COL_XXS_12} {style.column}" size="XS_6, SM_4">
				<g:Image ui:field="hutton"/>
			</b:Column>
			<b:Column addStyleNames="{COL_XXS_12} {style.column}" size="XS_6, SM_4">
				<g:Image ui:field="ics"/>
			</b:Column>
		</b:Row>

	</g:FlowPanel>
</ui:UiBinder>