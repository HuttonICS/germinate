<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
			 xmlns:g8="urn:import:jhi.germinate.client.widget.element"
			 xmlns:c='urn:import:jhi.germinate.client.widget.d3js'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:with field="msg" type="jhi.germinate.client.i18n.Text"/>

	<g:HTMLPanel ui:field="panel">
		<b:PageHeader text="{msg.trialsTitle}"/>

		<b:Row ui:field="content" visible="false">
			<b:Column size="XS_12,SM_6,LG_3">
				<g8:CategoryPanel icon="EYE" text="{msg.phenotypeOverview}" ui:field="overviewTab"/>
			</b:Column>
			<b:Column size="XS_12,SM_6,LG_3">
				<g8:CategoryPanel icon="AREA_CHART" text="{msg.trialsPByPTitle}" ui:field="scatterTab"/>
			</b:Column>
			<b:Column size="XS_12,SM_6,LG_3">
				<g8:CategoryPanel icon="TH" text="{msg.trialsMatrix}" ui:field="matrixTab"/>
			</b:Column>
			<b:Column size="XS_12,SM_6,LG_3">
				<g8:CategoryPanel icon="DOWNLOAD" text="{msg.generalDownload}" ui:field="downloadTab"/>
			</b:Column>
		</b:Row>

		<g:DeckPanel animationEnabled="true" ui:field="deck">
			<g:FlowPanel ui:field="overviewPanel"/>
			<c:ScatterChart ui:field="phenotypeByPhenotypeChart"/>
			<c:MatrixChart ui:field="matrixChart"/>
			<g8:DataExportSelection ui:field="exportSelection"/>
		</g:DeckPanel>
	</g:HTMLPanel>
</ui:UiBinder>