<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'
			 xmlns:b='urn:import:org.gwtbootstrap3.client.ui'>

	<ui:with field="msg" type="jhi.germinate.client.i18n.Text"/>

	<g:HTMLPanel>
		<b:PageHeader text="{msg.institutionsTitle}"/>
		<ui:safehtml from="{msg.institutionsText}"/>

		<g:SimplePanel ui:field="table"/>

		<b:Heading size="H3" text="{msg.institutionsMapTitle}"/>
		<ui:safehtml from="{msg.institutionsMapText}"/>

		<g:SimplePanel ui:field="map"/>
	</g:HTMLPanel>
</ui:UiBinder>