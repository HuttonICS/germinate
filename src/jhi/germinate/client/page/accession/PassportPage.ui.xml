<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'
			 xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
			 xmlns:g8="urn:import:jhi.germinate.client.widget.element">

	<ui:import field="jhi.germinate.shared.Style.*"/>
	<ui:import field="org.gwtbootstrap3.client.ui.constants.Styles.*"/>
	<ui:with field="msg" type="jhi.germinate.client.i18n.Text"/>

	<ui:style>
		.pedigree-padding {
			padding: 10px 0;
		}
	</ui:style>

	<g:HTMLPanel>
		<b:PageHeader ui:field="pageHeader"/>
		<g:HTML ui:field="html"/>

		<b:Row ui:field="topWrapper" visible="false">
			<b:Column size="XS_12,LG_6">
				<b:Heading size="H3" text="{msg.passportPassportData}"/>
				<g:FlowPanel ui:field="mcpdPanel"/>
			</b:Column>
			<b:Column size="XS_12,LG_6">
				<b:Heading size="H3" text="{msg.passportInstitutionsData}"/>
				<g:FlowPanel ui:field="institutionPanel"/>
			</b:Column>
		</b:Row>

		<g:FlowPanel ui:field="synonymsWrapper" visible="false">
			<g:HTMLPanel>
				<hr/>
			</g:HTMLPanel>

			<b:Heading size="H3" text="{msg.synonymsTitle}"/>
			<g8:SynonymWidget ui:field="synonyms"/>
		</g:FlowPanel>

		<g:FlowPanel ui:field="pedigreeWrapper" visible="false">
			<g:HTMLPanel>
				<hr/>
			</g:HTMLPanel>

			<b:Heading size="H3" text="{msg.passportPedigreeData}"/>
			<g:SimplePanel addStyleNames="{style.pedigree-padding}" ui:field="pedigreeListPanel"/>
			<g:SimplePanel addStyleNames="{style.pedigree-padding}" ui:field="pedigreeTablePanel"/>
			<g:SimplePanel addStyleNames="{style.pedigree-padding}" ui:field="pedigreeDownloadPanel"/>
		</g:FlowPanel>

		<g:FlowPanel ui:field="locationWrapper" visible="false">
			<g:HTMLPanel>
				<hr/>
			</g:HTMLPanel>

			<b:Heading size="H3" text="{msg.passportLocationData}"/>
			<g:FlowPanel ui:field="locationPanel"/>
		</g:FlowPanel>

		<g:FlowPanel ui:field="imageWrapper" visible="false">
			<g:HTMLPanel>
				<hr/>
			</g:HTMLPanel>

			<b:Heading size="H3" text="{msg.passportImages}"/>
			<g:FlowPanel ui:field="imagePanel"/>
		</g:FlowPanel>

		<g:FlowPanel ui:field="groupWrapper" visible="false">
			<g:HTMLPanel>
				<hr/>
			</g:HTMLPanel>

			<b:Heading size="H3" text="{msg.passportGroupsOverview}"/>
			<g:HTML ui:field="groupHtml"/>
			<g:FlowPanel ui:field="groupPanel"/>
		</g:FlowPanel>

		<g:FlowPanel ui:field="datasetWrapper" visible="false">
			<g:HTMLPanel>
				<hr/>
			</g:HTMLPanel>

			<b:Heading size="H3" text="{msg.passportDatasetsOverview}"/>
			<g:HTML ui:field="datasetHtml"/>
			<g:FlowPanel ui:field="datasetPanel"/>
		</g:FlowPanel>

		<g:FlowPanel ui:field="attributeWrapper" visible="false">
			<g:HTMLPanel>
				<hr/>
			</g:HTMLPanel>

			<b:Heading size="H3" text="{msg.passportAttributes}"/>
			<g:FlowPanel ui:field="attributePanel"/>
		</g:FlowPanel>

		<g:FlowPanel ui:field="commentWrapper" visible="false">
			<g:HTMLPanel>
				<hr/>
			</g:HTMLPanel>

			<g8:CommentWidget ui:field="commentWidget"/>
		</g:FlowPanel>

		<g:FlowPanel ui:field="linkWrapper" visible="false">
			<g:HTMLPanel>
				<hr/>
			</g:HTMLPanel>

			<b:Heading size="H3" text="{msg.passportExternalLinks}"/>
			<g8:LinkWidget ui:field="linkWidget"/>
		</g:FlowPanel>

		<g:FlowPanel ui:field="downloadWrapper" visible="false">
			<g:HTMLPanel>
				<hr/>
			</g:HTMLPanel>

			<b:Heading size="H3" text="{msg.downloadHeading}"/>
			<g:SimplePanel ui:field="downloadPanel"/>
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder>