<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
			 xmlns:g8='urn:import:jhi.germinate.client.page.genotype'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:with field="msg" type="jhi.germinate.client.i18n.Text"/>
	<ui:import field="jhi.germinate.shared.Style.*"/>

	<ui:style>
		.margin {
			margin-top: 10px;
		}
	</ui:style>

	<g:HTMLPanel>
		<b:PageHeader text="{msg.mapsTitle}"/>

		<b:Heading size="H4" text="{msg.mapsSubtitle}"/>
		<g:HTML ui:field="text"/>
		<g:FlowPanel ui:field="mapPanel"/>

		<g:FlowPanel ui:field="mapDetailsWrapper" visible="false" addStyleNames="{style.margin}">

			<b:Heading size="H3" ui:field="mapDetailsHeading"/>

			<g:HTML ui:field="mapDetailsParagraph"/>

			<g:SimplePanel ui:field="markerTablePanel"/>

			<b:html.ClearFix/>

			<g:FlowPanel visible="false" ui:field="mapHeatmapPanel">
				<b:Heading size="H3" text="{msg.mapsHistogramTitle}"/>
				<g:HTML ui:field="mapHeatmapParagraph"/>
			</g:FlowPanel>

			<g:SimplePanel ui:field="chartPanel"/>

			<g8:MapExportOptionsPanel ui:field="exportOptionsPanel"/>
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder>