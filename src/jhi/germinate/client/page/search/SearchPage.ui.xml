<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:g8="urn:import:jhi.germinate.client.widget.listbox"
			 xmlns:s="urn:import:jhi.germinate.client.page.search">

	<ui:import field="jhi.germinate.shared.Style.*"/>
	<ui:import field="org.gwtbootstrap3.client.ui.constants.Styles.*"/>
	<ui:import field="com.google.gwt.user.client.ui.FormPanel.*"/>
	<ui:with field="msg" type="jhi.germinate.client.i18n.Text"/>

	<ui:style>
		.header {
			text-transform: capitalize;
		}
	</ui:style>

	<g:FlowPanel>

		<b:PageHeader text="{msg.menuSearch}" addStyleNames="{style.header}"/>

		<b:FormGroup>
			<b:FormLabel for="formType" text="{msg.searchPageDataCategory}"/>
			<g8:SearchTypeListBox ui:field="typeBox"/>
		</b:FormGroup>

		<b:FormGroup>
			<b:FormLabel for="formSearch" text="{msg.searchPageSearchBox}"/>
			<b:InputGroup b:id="formSearch">
				<b:TextBox addStyleNames="{FORM_CONTROL}" ui:field="searchBox" placeholder="{msg.searchPrompt}"/>
				<b:InputGroupButton>
					<b:Button ui:field="searchButton" icon="SEARCH"/>
				</b:InputGroupButton>
			</b:InputGroup>
		</b:FormGroup>

		<b:PageHeader text="{msg.searchTitleResults}" ui:field="resultHeader" visible="false"/>

		<b:PanelGroup b:id="accordion">
			<s:SearchSection heading="{msg.searchSectionAccessionData}" ui:field="accessionSection"/>
			<s:SearchSection heading="{msg.searchSectionAttributeData}" ui:field="attributeSection"/>
			<s:SearchSection heading="{msg.searchSectionPhenotypeData}" ui:field="phenotypeSection"/>
			<s:SearchSection heading="{msg.searchSectionCompoundData}" ui:field="compoundSection"/>
			<s:SearchSection heading="{msg.searchSectionMapDefinitionData}" ui:field="mapDefinitionSection"/>
			<s:SearchSection heading="{msg.searchSectionDatasets}" ui:field="datasetSection"/>
			<s:SearchSection heading="{msg.searchSectionPedigreeData}" ui:field="pedigreeSection"/>
			<s:SearchSection heading="{msg.searchSectionLocationData}" ui:field="locationSection"/>
		</b:PanelGroup>
	</g:FlowPanel>
</ui:UiBinder>