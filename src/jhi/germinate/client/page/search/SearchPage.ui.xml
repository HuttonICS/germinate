<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:g8="urn:import:jhi.germinate.client.widget.listbox"
			 xmlns:s="urn:import:jhi.germinate.client.page.search">

	<ui:import field="jhi.germinate.shared.Style.*"/>
	<ui:import field="org.gwtbootstrap3.client.ui.constants.Styles.*"/>
	<ui:import field="com.google.gwt.user.client.ui.FormPanel.*"/>
	<ui:with field="msg" type="jhi.germinate.client.i18n.Text"/>

	<ui:style>
		.header {
			text-transform: capitalize;
		}
	</ui:style>

	<g:FlowPanel>

		<b:PageHeader text="{msg.menuSearch}" addStyleNames="{style.header}"/>

		<b:FormGroup>
			<b:FormLabel for="formType" text="{msg.searchPageDataCategory}"/>
			<g8:SearchTypeListBox ui:field="typeBox"/>
		</b:FormGroup>

		<b:FormGroup>
			<b:FormLabel for="formSearch" text="{msg.searchPageSearchBox}"/>
			<b:InputGroup b:id="formSearch">
				<b:Tooltip title="{msg.searchBoxTooltip}" placement="BOTTOM">
					<b:TextBox addStyleNames="{FORM_CONTROL}" ui:field="searchBox" placeholder="{msg.searchPrompt}"/>
				</b:Tooltip>
				<b:InputGroupButton>
					<b:Button ui:field="searchButton" icon="SEARCH"/>
				</b:InputGroupButton>
			</b:InputGroup>
		</b:FormGroup>

		<g:FlowPanel ui:field="resultPanel" visible="false">
			<b:Heading size="H3" text="{msg.searchTitleResults}" ui:field="resultHeading"/>

			<g:HTML ui:field="additionalDataTextShort" visible="false"/>

			<b:PanelGroup b:id="accordion">
				<s:SearchSection heading="{msg.searchSectionAccessionData}" preventHideSibling="true" ui:field="accessionSection"/>
				<s:SearchSection heading="{msg.searchSectionAccessionAttributeData}" preventHideSibling="true" ui:field="accessionAttributeSection"/>
				<s:SearchSection heading="{msg.searchSectionPhenotypeData}" preventHideSibling="true" ui:field="phenotypeSection"/>
				<s:SearchSection heading="{msg.searchSectionCompoundData}" preventHideSibling="true" ui:field="compoundSection"/>
				<s:SearchSection heading="{msg.searchSectionMapDefinitionData}" preventHideSibling="true" ui:field="mapDefinitionSection"/>
				<s:SearchSection heading="{msg.searchSectionDatasets}" preventHideSibling="true" ui:field="datasetSection"/>
				<s:SearchSection heading="{msg.searchSectionDatasetAttributeData}" preventHideSibling="true" ui:field="datasetAttributeSection"/>
				<s:SearchSection heading="{msg.searchSectionPedigreeData}" preventHideSibling="true" ui:field="pedigreeSection"/>
				<s:SearchSection heading="{msg.searchSectionLocationData}" preventHideSibling="true" ui:field="locationSection"/>
			</b:PanelGroup>
		</g:FlowPanel>

		<g:FlowPanel ui:field="additionalDataPanel" visible="false">
			<b:Heading size="H3" text="{msg.searchAdditionalDatasetsTitle}"/>

			<g:HTML ui:field="additionalDataText"/>

			<g:SimplePanel ui:field="additionalDataTablePanel"/>

			<b:Button icon="REFRESH" text="{msg.generalUpdate}" ui:field="updateButton"/>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>